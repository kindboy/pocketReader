{
    "extends": "airbnb-base",
    "env": {
        "node": true,
        "es6": true
    },
    "plugins": [
        "import"
    ],
    "rules": {
        "no-unused-vars": "warn",
        "no-unused-expressions": "off",
        "no-param-reassign": "off",
        "no-return-await":"off",
        "indent": [
            "error",
            4,
            {"SwitchCase": 1}
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always",
            {
                "omitLastInOneLineBlock": true
            }
        ],
        "semi-spacing": [
            "error",
            {
                "before": false,
                "after": true
            }
        ],
        "semi-style": [
            "error",
            "last"
        ],
        "no-extra-semi": "error",
        "no-multi-spaces": [
            "error",
            {
                "ignoreEOLComments": true,
                "exceptions": {
                    "Property": true,
                    "BinaryExpression": false,
                    "VariableDeclarator": true,
                    "ImportDeclaration": true
                }
            }
        ],
        "array-bracket-spacing": [
            "error",
            "never"
        ],
        "comma-spacing": [
            "error",
            {
                "before": false,
                "after": true
            }
        ],
        "keyword-spacing": [
            "error",
            {
                "before": true,
                "after": true
            }
        ],
        "no-trailing-spaces": "error",
        "space-before-blocks": [
            "error",
            "always"
        ],
        "space-before-function-paren": [
            "error",
            {
                "anonymous": "always",
                "named": "never",
                "asyncArrow": "always"
            }
        ],
        "comma-dangle": ["warn", "only-multiline"],
        "no-console": "off",
        "spaced-comment": [
            "error",
            "always",
            {
                "block": {
                    "exceptions": [
                        "*"
                    ],
                    "balanced": true
                }
            }
        ],
        "no-shadow": "off",
        "arrow-parens": "off"
    },
    "globals": {
        "App": true,
        "Page": true,
        "Component": true,
        "wx": true,
        "getApp": true
    }
}